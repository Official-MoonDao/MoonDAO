{
  "name": "townhall-summarizer",
  "version": "1.0.0",
  "description": "Townhall processing service that extracts audio, transcribes, summarizes, and sends ConvertKit emails",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "test": "ts-node src/test.ts",
    "retro": "ts-node src/retro.ts",
    "get-channel-id": "ts-node src/utils/get-channel-id.ts",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart"
  },
  "dependencies": {
    "express": "^4.18.2",
    "openai": "^4.20.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
